{
  "name": "sevens-core",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo que agrupa el frontend Vite, la API Core Gateway, los paquetes compartidos y la infraestructura CDK de Sevens Core.",
  "type": "commonjs",
  "packageManager": "pnpm@10.5.2",
  "scripts": {
    "dev": "vite",
    "dev:core": "pnpm --filter @sevens/core-gateway dev",
    "build": "pnpm run build:web && pnpm run build:packages && pnpm run build:core",
    "build:web": "vite build",
    "build:packages": "pnpm --filter @sevens/shared build && pnpm --filter @sevens/db build",
    "build:core": "pnpm --filter @sevens/core-gateway build",
    "build:infra": "pnpm --filter @sevens/cdk-core build",
    "preview": "vite preview",
    "openapi": "pnpm --filter @sevens/core-gateway openapi",
    "test": "vitest run --config vite.config.ts",
    "test:watch": "vitest --config vite.config.ts",
    "test:e2e": "vitest run --config vite.config.ts tests/core.api.e2e.test.ts",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "check:entities": "node scripts/check-entities.js",
    "check:no-mocks": "node scripts/check-nomocks.js",
    "prisma:generate": "prisma generate --schema=packages/db/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate deploy --schema=packages/db/prisma/schema.prisma",
    "prisma:seed": "node packages/db/prisma/seed.js",
    "cdk:synth": "pnpm --filter @sevens/cdk-core cdk synth",
    "cdk:deploy": "pnpm --filter @sevens/cdk-core cdk deploy",
    "pretest": "pnpm run build:packages",
    "pretest:e2e": "pnpm run build:packages"
  },
  "dependencies": {
    "@fastify/aws-lambda": "^4.1.0",
    "@google/genai": "^1.20.0",
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/platform-fastify": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/client": "^5.22.0",
    "fastify": "^4.29.1",
    "jszip": "^3.10.1",
    "lodash-es": "^4.17.21",
    "papaparse": "^5.4.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "recharts": "^2.15.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "supertest": "^7.1.4",
    "zod": "^3.23.8",
    "@sevens/db": "workspace:*",
    "@sevens/shared": "workspace:*"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.1.6",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.18.4",
    "@types/papaparse": "^5.3.16",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/supertest": "^6.0.3",
    "prisma": "^5.22.0",
    "typescript": "~5.8.3",
    "vite": "^5.4.20",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.1"
  },
  "pnpm": {
    "overrides": {
      "vite": "^5.4.20"
    }
  }
}
